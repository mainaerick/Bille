<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Model.AddvehicleActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="37dp"
            android:paddingTop="13dp"
            android:paddingLeft="37dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/titlename"
                    style="@style/TextAppearance.MaterialComponents.Headline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billie"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/accountbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Vehicle"
                android:textColor="@color/colorBlue"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                app:layout_constraintTop_toBottomOf="@+id/titlename"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                />
            <TextView
                android:id="@+id/labelplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plate Number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titletext"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textStyle="bold"
                android:textColor="@color/colorGreydark"
                android:layout_marginBottom="7dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorGrey"
                android:layout_marginBottom="13dp"
                app:layout_constraintTop_toBottomOf="@+id/labelnumber">
                <EditText
                    android:id="@+id/edittextplatenumber"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorGrey"
                    android:inputType="phone"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/card_phone"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/labelroute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route"
                android:textColor="@color/colorGreydark"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"

                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorGrey"
                android:layout_marginBottom="37dp"
                app:layout_constraintTop_toBottomOf="@+id/labelpassword">
                <EditText
                    android:id="@+id/edittextroute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorGrey"
                    android:inputType="textPassword"
                    />

            </androidx.cardview.widget.CardView>



            <TextView
                app:layout_constraintTop_toBottomOf="@+id/card_phone"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/labelchargingrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charging Rate"
                android:textColor="@color/colorGreydark"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"

                />

            <RadioGroup
                android:checkedButton="@+id/radioconstant"
                android:id="@+id/togglerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/control_switch_background_border"
                android:orientation="horizontal">
            <RadioButton
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:id="@+id/radioconstant"
                android:background="@drawable/control_switch_background_selector_middle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="Constant"
                android:fontFamily="sans-serif-medium"
                android:textColor="@drawable/control_switch_color_selector"/>
            <RadioButton
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:id="@+id/radiochanges"
                android:background="@drawable/control_switch_background_selector_middle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="Changes"
                android:fontFamily="sans-serif-medium"
                android:textColor="@drawable/control_switch_color_selector"/>

            </RadioGroup>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/card_phone"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/labelcharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charges"
                android:textColor="@color/colorGreydark"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"

                />

            <RadioGroup
                android:checkedButton="@+id/chargesevening"
                android:id="@+id/toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/control_switch_background_border"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:id="@+id/chargesevening"
                    android:background="@drawable/control_switch_background_selector_middle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Morning"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@drawable/control_switch_color_selector"/>
                <RadioButton
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:id="@+id/chargesafternoon"
                    android:background="@drawable/control_switch_background_selector_middle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Afternoon"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@drawable/control_switch_color_selector"/>
                <RadioButton
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:id="@+id/chargesmorning"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/control_switch_background_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Evening"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@drawable/control_switch_color_selector"/>
            </RadioGroup>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/card_phone"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/labeltimeslot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TimeSlots"
                android:textColor="@color/colorGreydark"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="13dp"
                >
                <TextView
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/card_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/timeslot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="05:00-10:00"
                    android:textColor="@color/colorGreydark"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    app:layout_constraintTop_toBottomOf="@+id/card_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/edittimeslot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="edit"
                    android:textColor="@color/colorBlue"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/card_phone"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/labelchargetimeslot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charge"
                android:textColor="@color/colorGreydark"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/card_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/chergetimeslot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ksh - 60"
                    android:textColor="@color/colorGreydark"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/card_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/editchargetimeslot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="edit"
                    android:textColor="@color/colorBlue"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorGrey"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="0dp"
                    android:layout_weight="1"
                    >
                    <Button

                        android:id="@+id/customizetimeslot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrey"
                        android:text="Customize Further"
                        android:textColor="@color/colorBlue"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="?attr/actionBarSize"
                android:layout_marginTop="37dp"

                >


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/colorBlue"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    >
                    <Button

                        android:id="@+id/signup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlue"
                        android:text="Signup"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:padding="7dp"
                        />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>