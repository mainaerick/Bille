<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Model.FundActivity"
    android:orientation="vertical"
    android:paddingRight="37dp"
    android:paddingTop="13dp"
    android:paddingLeft="37dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/titlename"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billie"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/accountbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <TextView
        android:layout_weight="0"
        android:id="@+id/subtitle"
        style="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Funds"
        android:textColor="@color/colorBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlename"

        />
    <TextView
        android:layout_weight="0"
        style="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Current Balance"
        android:textColor="@color/colorBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlename"
        android:textStyle="bold"

        />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KSH 50900"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:id="@+id/amounttobepaid"
        android:textStyle="bold"
        />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="37dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorGrey"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        >
        <Button
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrey"
            android:text="Withdraw to MPesa"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_weight="0"
        style="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="History"
        android:textColor="@color/colorBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlename"
        android:textStyle="bold"

        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        tools:listitem="@layout/layout_history"
        android:layout_weight="1"
        />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="37dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorGrey"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="37dp"

        >
        <Button
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:id="@+id/btnstatement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrey"
            android:text="Detailed Statement"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>
</LinearLayout>