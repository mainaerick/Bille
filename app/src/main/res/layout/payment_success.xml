<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="37dp"
    android:paddingTop="13dp"
    android:paddingLeft="37dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/titlename"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billie"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/accountbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_weight="0"
        android:id="@+id/subtitle"
        style="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Pay for this ride"
        android:textColor="@color/colorBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlename"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="37dp"
        android:scrollbars="none"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_paymentstatus"

            >
            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@mipmap/ic_done"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAID"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:textColor="@color/colorSuccess"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Minutes Ago"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/colorGreydark"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday, 12 February 2021"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/colorGreydark"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                />
            <TextView
                android:id="@+id/ticket_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0F231FD"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/colorGreydark"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50 KSH"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:id="@+id/amounttobepaid"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KCA 199C\nLOPHA TRAVELS"
                style="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorGreydark"
                android:textStyle="bold"
                />
            <androidx.cardview.widget.CardView
                android:layout_marginTop="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorBlue"
                app:cardCornerRadius="9dp"
                app:cardElevation="0dp"
                >
                <Button
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:id="@+id/pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlue"
                    android:text="Show Verification Code"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codes"
                    android:textColor="@color/colorBlue"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textStyle="bold"
                    android:layout_marginTop="37dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket Number"
                    android:textColor="@color/colorGreydark"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textStyle="bold"
                    android:layout_marginTop="13dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ticketcount"
                    style="@style/TextAppearance.MaterialComponents.Headline3"
                    android:text="23"
                    android:textColor="@color/colorSuccess"
                    android:textStyle="bold"
                    android:layout_marginTop="13dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Code"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textStyle="bold"
                    android:textColor="@color/colorGreydark"
                    android:layout_marginTop="37dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="?actionBarSize"


                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>