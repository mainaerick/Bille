<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Model.AccountActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="37dp"
        android:paddingTop="13dp"
        android:paddingLeft="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/titlename"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billie"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_weight="0"
            android:id="@+id/subtitle"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="My Account"
            android:textColor="@color/colorBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titlename"

            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_supervised_user_circle_24px"
                    android:layout_marginTop="37dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Details"
                    android:layout_marginTop="13dp"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="@color/colorGreydark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your account number is 074212762. It is used for both communication and payments"
                    android:layout_marginTop="13dp"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="@color/colorGreydark"
                    />



                <androidx.cardview.widget.CardView
                    android:layout_marginTop="13dp"
                    android:id="@+id/card_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorGrey"
                    app:layout_constraintTop_toBottomOf="@+id/labelnumber">
                    <EditText
                        android:id="@+id/edittextphonenumber"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/colorGrey"
                        android:inputType="phone"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="13dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBlue"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="0dp"
                    >
                    <Button
                        android:layout_marginLeft="37dp"
                        android:layout_marginRight="37dp"
                        android:id="@+id/addnumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlue"
                        android:text="Add number"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_marginTop="37dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_security_black_24dp"
                    />

                <TextView
                    android:layout_marginTop="13dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="@color/colorGreydark"
                    />

                <TextView
                    android:layout_marginTop="13dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your password was last changed on Monday 12th May 2021"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="@color/colorGreydark"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="13dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBlue"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="0dp"
                    >
                    <Button
                        android:layout_marginLeft="37dp"
                        android:layout_marginRight="37dp"
                        android:id="@+id/change_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlue"
                        android:text="Change Password"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_help_outline_black_24dp"
                    android:layout_marginTop="37dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need Any Help?"
                    android:layout_marginTop="13dp"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="@color/colorGreydark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:layout_marginTop="13dp"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="@color/colorGreydark"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="13dp"
                    android:id="@+id/card_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorGrey"
                    app:layout_constraintTop_toBottomOf="@+id/labelnumber">
                    <EditText
                        android:id="@+id/editsubject"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/colorGrey"
                        android:inputType="phone"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body"
                    android:layout_marginTop="13dp"
                    style="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="@color/colorGreydark"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="13dp"
                    android:id="@+id/card_body"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorGrey"
                    app:layout_constraintTop_toBottomOf="@+id/labelnumber"

                    >
                    <EditText
                        android:layout_gravity="top"
                        android:id="@+id/editbody"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/colorGrey"
                        android:inputType="textMultiLine"
                        android:layout_height="150dp"

                        />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBlue"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="?attr/actionBarSize">
                    <Button
                        android:layout_marginLeft="37dp"
                        android:layout_marginRight="37dp"
                        android:id="@+id/submit_issue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlue"
                        android:text="Submit Issue"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>