<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Model.Addvehiclestep2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="37dp"
        android:paddingTop="13dp"
        android:paddingLeft="37dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/titlename"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billie"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/accountbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Vehicle"
            android:textColor="@color/colorBlue"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"
            app:layout_constraintTop_toBottomOf="@+id/titlename"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:id="@+id/labelplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plate Number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titletext"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textStyle="bold"
            android:textColor="@color/colorGreydark"
            android:layout_marginBottom="7dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorGrey"
            android:layout_marginBottom="13dp"
            app:layout_constraintTop_toBottomOf="@+id/labelnumber">
            <EditText
                android:id="@+id/edittextplatenumber"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorGrey"
                android:inputType="phone"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_marginTop="37dp"

            >


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorBlue"
                app:cardCornerRadius="9dp"
                app:cardElevation="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/add_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlue"
                    android:text="Add Vehicle"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:padding="7dp"
                    />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview_adddvehicle"
            tools:listitem="@layout/layout_addedvehicle"
            android:scrollbars="none"
            />
    </LinearLayout>

</LinearLayout>